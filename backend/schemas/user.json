{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/user.json",
    "type": "object",
    "properties": {
        "user_id": {
            "type": "integer"
        },
        "username": {
            "type": "string",
            "maxLength": 25
        },
        "password": {
            "type": "string",
            "maxLength": 25
        },
        "email": {
            "type": "string",
            "format": "email"
        }
    },
    "required": [
        "username",
        "password",
        "email"
    ]
}