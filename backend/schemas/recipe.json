{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/recipe.json",
    "type": "object",
    "properties": {
        "recipe_id": {
            "type": "integer"
        },
        "title": {
            "type": "string",
            "maxLength": 25
        },
        "description": {
            "type": "string"
        },
        "image_url": {
            "type": "string",
            "format": "uri"
        },
        "meal_category_id": {
            "type": "integer"
        }
    },
    "required": [
        "title",
        "description",
        "meal_category_id"
    ]
}